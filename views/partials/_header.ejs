<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!user){%>
    <div class="ms-auto form-inline p-2">
      <form method="GET" action="/login" class="form-inline my-2 my-lg-0 mr-2">
        <button type="submit" class = "btn btn-outline-dark my-2 my-sm-0">Login</button>
      </form>
      <form method="GET" action="/register" class="form-inline my-2 my-lg-0">
        <button type="submit" class = "btn btn-dark my-2 my-sm-0">Sign-up</button>
      </form>
    </div>
    <% } else {%>
      <div class="ms-auto">
        <form method="POST" action="/logout" class="form-inline my-2 my-lg-0">
          <p class="nav-item text-center pt-3 mr-4">Logged In As: <%=user.email%> User!</p>
          <button type="submit" class = "btn btn-outline-dark my-2 my-sm-0">Logout</button>
        </form>
      </div>
    <% } %>
  </nav>
</header>